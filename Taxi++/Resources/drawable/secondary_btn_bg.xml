<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- disable state. -->
  <item android:state_enabled="false">
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/bottom_sheet_corner_radius"/>
      <solid android:color="#e0e0e0"/>
      <stroke android:color="#e0e0e0" android:width="1dp"/>
    </shape>
  </item>

  <!--released state. -->
  <item android:state_pressed="false">
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/bottom_sheet_corner_radius"/>
      <solid android:color="@android:color/holo_red_dark"/>
      <stroke android:color="@android:color/holo_red_dark" android:width="1dp"/>
    </shape>
  </item>

  <!--pressed state. -->
  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/bottom_sheet_corner_radius"/>
      <solid android:color="@color/facebookPrimary"/>
      <stroke android:color="@color/facebookPrimary" android:width="1dp"/>
    </shape>
  </item>

</selector>