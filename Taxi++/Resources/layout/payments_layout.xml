<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stripe="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/payments_toolbar"
        layout="@layout/primary_toolbar"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="16dp"
        android:layout_below="@+id/payments_toolbar"
        android:id="@+id/cards_linear">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mastercard"
            android:layout_marginEnd="4dp"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_visa"
            android:layout_marginEnd="4dp"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_amex"
            android:layout_marginEnd="4dp"
        />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add your card for a seamless ride. We may do a temporary booking and return it to your account to validate your card."
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/cards_linear"
        android:id="@+id/alert_tv"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:id="@+id/striipe_linear"
        android:layout_below="@+id/alert_tv">

        <com.stripe.android.view.CardInputWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stripe_input"
            stripe:cardTextErrorColor="@android:color/holo_red_dark"
        />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/primary_btn_bg"
        android:text="Add card"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/add_card_btn"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
    />
</RelativeLayout>